# Caddy configuration for The Graph Dashboards
# Automatically obtains and renews Let's Encrypt certificates

# Production: hub.thegraph.foundation (Dashboard Hub)
hub.thegraph.foundation {
    # Grumpy Goose (must be first to avoid conflict)
    handle /goose* {
        root * /usr/share/nginx/html/goose
        try_files {path} {path}/ /index.html
        file_server browse
    }

    # REO
    handle /reo* {
        root * /usr/share/nginx/html/reo
        try_files {path} {path}/ /index.html
        file_server browse
    }

    # Dashboard Hub at root (default)
    root * /usr/share/nginx/html/hub
    file_server browse

    # Health check
    handle /health {
        respond "healthy\n" 200
    }

    # Cache static assets
    @static {
        path *.js *.css *.png *.jpg *.jpeg *.gif *.ico *.svg *.woff *.woff2 *.ttf *.eot
    }
    header @static Cache-Control "public, max-age=604800, immutable"

    # HTML cache for 1 minute
    @html {
        path *.html
    }
    header @html Cache-Control "public, max-age=60"

    # Security headers
    header {
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    # Encode
    encode gzip
}

# Staging: staging.hub.thegraph.foundation (Active Items UI comparison)
staging.hub.thegraph.foundation {
    # Reverse proxy to staging container
    reverse_proxy grumpygoose-staging:8080

    # Security headers
    header {
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        Strict-Transport-Security "max-age=31536000; includeSubDomains"
    }

    # Encode
    encode gzip
}
